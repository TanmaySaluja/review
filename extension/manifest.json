{
  "manifest_version": 2,
  "name": "Send Site Text to Python",
  "version": "1.0",
  "description": "Extract site text and send to FastAPI",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
