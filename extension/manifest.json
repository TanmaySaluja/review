{
  "manifest_version": 2,
  "name": "Amazon Review Extractor",
  "version": "1.0",
  "permissions": [
    "http://127.0.0.1/*",
    "https://www.amazon.in/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.amazon.in/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
